{
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.documentSelectors": ["**/*.astro"], // needed to format *.astro on save
	"typescript.tsdk": "node_modules/typescript/lib", // this ensures vs code uses the repo version of typescript
	"typescript.enablePromptUseWorkspaceTsdk": true // will prompt to use typescript version specified in the workspace
}
