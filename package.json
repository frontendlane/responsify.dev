{
	"name": "responsify-dev",
	"type": "module",
	"version": "4.0.0",
	"author": {
		"name": "Petar Petrovic",
		"email": "petar@frontendlane.com",
		"url": "https://frontendlane.com/about/"
	},
	"homepage": "https://responsify.dev",
	"repository": "https://github.com/frontendlane/responsify/",
	"bugs": "https://github.com/frontendlane/responsify/issues",
	"license": "ISC",
	"keywords": [
		"responsive",
		"css",
		"scss",
		"calc",
		"@media"
	],
	"description": "Responsify: Smooth out layout jumps at breakpoints",
	"scripts": {
		"update": "pnpm install && npx npm-check-updates -u && rm -rf node_modules && rm pnpm-lock.yaml && pnpm install",
		"dev": "pnpm run zip && astro dev",
		"build": "astro check && tsc --noEmit && astro build",
		"zip": "zip public/_responsify.scss.zip public/_responsify.scss",
		"preview": "astro preview",
		"astro": "astro",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@astrojs/preact": "^2.2.1",
		"@hookform/resolvers": "^3.1.1",
		"astro": "^2.7.0",
		"clipboard": "^2.0.11",
		"preact": "^10.6.5",
		"react-hook-form": "^7.45.1"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"cssnano": "^6.0.1",
		"cssnano-preset-default": "^6.0.1",
		"postcss-import": "^15.1.0",
		"postcss-media-minmax": "^5.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-astro": "^0.10.0"
	},
	"overrides": {
		"react": "npm:@preact/compat@latest",
		"react-dom": "npm:@preact/compat@latest"
	},
	"private": true
}
